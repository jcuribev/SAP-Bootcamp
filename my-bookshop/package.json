{
  "name": "cap-development-learning-journey",
  "version": "1.0.0",
  "description": "A simple CAP project",
  "dependencies": {
    "@sap/cds": "^7",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.3.1"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": ":memory:"
          }
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "adminuser": {
            "password": "abcd1234",
            "roles": [
              "admin"
            ]
          },
          "catuser": {
            "password": "abcd1234"
          }
        }
      }
    }
  }
}
